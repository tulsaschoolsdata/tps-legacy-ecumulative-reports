{% import "macros.njk" as macros %}
<html>
  <head>
    <style>
      html, body {
        font-family: sans-serif;
      }
      #header {
        font-weight: bold;
      }
      #header .banner {
        text-align: center;
        position: relative;
      }
      #header .banner .date {
        position: absolute;
        top: 0;
        right: 0;
      }
      #header .student-name {
        margin: 1rem 0;
      }
      #footer {
        text-align: center;
      }
      table {
        break-inside: avoid;
        font-size: 85%
      }
      td, th {
        margin: 0;
        padding: 0.25rem;
      }
      thead tr {
        background-color: #5974B4;
      }
      thead th {
        color: #fff;
        text-align: left;
      }
      tbody tr.odd {
        background-color: #eee;
      }
      tbody tr.even {
        background-color: #fff;
      }
      .page {
        page-break-after: always;
      }
      .no-break {
        break-inside: avoid;
      }
      .blueBG {
        background-color: #5974B4;
        color: #fff;
        text-align: left;
        font-weight: bold;
      }
      .testName {
        margin: 0 100px 0 0;
      }
      .testMetaAttr {
        margin: 0 30px 0 10px;
      }
    </style>
  </head>
  <body>
    <div id="header">
      <div class="banner">
        <div>ELECTRONIC CUMULATIVE RECORD</div>
        <div>TULSA PUBLIC SCHOOLS</div>
        <div><small>Educational Measurements (Test Scores)</small></div>
        <div class="date">Date: {{ date | formatDate }}</div>
      </div>
      <div class="student-name">
        {{ student_data_transcript.STUDENT_LNAME | trim }},
        {{ student_data_transcript.STUDENT_FNAME | trim }}
        {{ student_data_transcript.STUDENT_MI | trim }}
      </div>
    </div>

    <div class="page" data-pageNum="1">
      <div class="no-break">
        <h3>Student Test List</h3>

        {{ macros.student_test_list(studentTestList) }}
        {{ macros.testTableOtis(otis) }}

      </div>
    </div>
    <div class="page" data-pageNum="2">
      <div class="no-break">
        {{ macros.testTableIowaTap(iowa_new) }}
        {{ macros.testTableOklaCore(oklacore) }}
      </div>
    </div>
    <div class="page" data-pageNum="3">
      <div class="no-break">
        {{ macros.testTableGates(gates) }}
        {{ macros.testTableExplore(explore) }}
      </div>
    </div>
    <div class="page" data-pageNum="4">
      <div class="no-break">
        {{ macros.testTableEndOfInstruction(eoi) }}
        {{ macros.testTablePlan(plan) }}
        {{ macros.testTableAct(act) }}
      </div>
    </div>
    <div class="page" data-pageNum="5">
      <div class="no-break">
        {{ macros.testTableITBS(itbs) }}
        {{ macros.testTablePBP(pbp) }}
        {{ macros.testTableSAT(sat) }}
        {{ macros.testTableStanford9(sta9) }}
        {{ macros.testTableNAGL(nagle) }}
      </div>
    </div>

    <div id="footer">
      Page <span class="pageNumber"></span> of <span class="totalPages"></span>
    </div>
  </body>
</html>
