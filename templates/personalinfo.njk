{% import "macros.njk" as macros %}
<html>
  <head>
    <style>
      html, body {
        font-family: sans-serif;
      }
      #header {
        font-weight: bold;
      }
      #header .banner {
        text-align: center;
        position: relative;
      }
      #header .banner .date {
        position: absolute;
        top: 0;
        right: 0;
      }
      #header .student-name {
        margin: 1rem 0;
      }
      #subheader {
        font-size: 80%;
      }
      #footer {
        text-align: center;
      }
      table {
        break-inside: avoid;
        font-size: 85%
      }
      td, th {
        margin: 0;
        padding: 0.25rem;
      }
      thead tr {
        background-color: #5974B4;
      }
      thead th {
        color: #fff;
        text-align: left;
      }
      tbody tr.odd {
        background-color: #eee;
      }
      tbody tr.even {
        background-color: #fff;
      }
      .page {
        page-break-after: always;
      }
      .no-break {
        break-inside: avoid;
      }
    </style>
  </head>
  <body>
    <div id="header">
      <div class="banner">
        <div>Student Personal Information Report</div>
        <div>Tulsa Public Schools</div>
        <div><small>3027 S. New Haven 74114</small></div>
        <div class="date">Date: {{ date | formatDate }}</div>
      </div>
      <div class="student-name">
        {{ student_data_transcript.STUDENT_LNAME | trim }},
        {{ student_data_transcript.STUDENT_FNAME | trim }}
        {{ student_data_transcript.STUDENT_MI | trim }}
      </div>
      <div id="subheader" style="display: flex; column-gap: 1rem;">
        <div style="flex-grow: 1; display: flex; flex-direction: column; row-gap: 0.5rem;">
          <div>
            {{ student_data_transcript.STUDENT_HOUSE_NO }}
            {{ student_data_transcript.STUDENT_DIRECTION }}
            {{ student_data_transcript.STUDENT_STREET }}
            {{ student_data_transcript.STUDENT_ZIP1 }}
          </div>
          <div>…phone…</div>
          <div style="display: flex; column-gap: 1rem;">
            <div>…gender…</div>
            <div>{{ student_personal_data_report.STUDENT_RACE }}</div>
          </div>
          <div style="display: flex; column-gap: 1rem;">
            <div>Birthday: {{ student_personal_data_report.STUDENT_BIRTHDATE }}</div>
            <div>Health Code:{{ student_personal_data_report.HEALTH_CD }}</div>
          </div>
          <div style="display: flex; column-gap: 1rem;">
            <div>Parent/Guardian:</div>
            <div>
              <div>
                {{ demo.PARENT_FNAME }}
                {{ demo.PARENT_MI }}
                {{ demo.PARENT_LNAME }}
              </div>
              <div>
                {{ demo.SPARENT_FNAME }}
                {{ demo.SPARENT_MI }}
                {{ demo.SPARENT_LNAME }}
              </div>
            </div>
          </div>
        </div>
        <div style="flex-grow: 1; display: flex; flex-direction: column; row-gap: 0.5rem;">
          <div>Student Number: ?</div>
          <div>Current School: ?</div>
          <div>Entry Date: ?</div>
          <div>Status: ?</div>
        </div>
        <div style="flex-grow: 1; display: flex; flex-direction: column; row-gap: 0.5rem;">
          <div>Goes By: ?</div>
          <div>Grade: ?</div>
          <div>Reason Code: ?</div>
        </div>
      </div>
    </div>

    <div class="page" data-pageNum="1">
      <div class="no-break">
        <br />
        {{macros.personalInfoMobility(spd_mobility)}}
        <br />
        {{macros.personalInfoImmunizations(spd_immunizations)}}
      </div>
    </div>

    <div class="page" data-pageNum="2">
      <div class="no-break">
        <br />
        {{macros.personalInfoSuspensions([])}}
        <br />
        {{macros.personalInfoSpecialEd([])}}
      </div>
    </div>

    <div id="footer">
      Page <span class="pageNumber"></span> of <span class="totalPages"></span>
    </div>
  </body>
</html>
